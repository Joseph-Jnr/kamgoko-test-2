{
  "manifest_version": 2,
  "name": "WhatsApp Stats",
  "version": "1.0",
  "description": "Get WhatsApp statistics",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}
